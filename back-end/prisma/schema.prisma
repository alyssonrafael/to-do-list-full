generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Task {
  id          Int      @id @default(autoincrement())
  descricao   String
  dia         DateTime
  categoriaId Int
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  status      String    @default("n√£o iniciado")
  cor         String
  horario     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Categoria {
  id        Int      @id @default(autoincrement())
  nome      String
  tarefas   Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

